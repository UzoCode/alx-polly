{
  "name": "code-review-agent",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node --enable-source-maps ./dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "build": "tsc -p tsconfig.json",
    "review:staged": "ts-node-esm src/index.ts --mode=staged",
    "review:branch": "ts-node-esm src/index.ts --mode=branch --base=main"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "@types/node": "^18.11.9"
  }
}
